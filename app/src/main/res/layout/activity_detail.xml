<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/back">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="64dp"
               android:src="@drawable/logo"
               android:layout_margin="@dimen/spacing_normal_16"
               android:layout_gravity="center"/>

    <com.united.forabet.views.TeamView
            android:id="@+id/titleView"
            android:layout_margin="@dimen/spacing_normal_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
            android:layout_marginTop="@dimen/spacing_smallest_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_normal_16"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white_20">

            <TextView
                    android:id="@+id/description"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_smallest_8"/>

        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
